{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "DJANGO_SETTINGS_MODULE": "config.settings",
                "TESTING": "1"
            },
            "args": [
                "-v",
                "--tb=short",
                "${workspaceFolder}/accounts/tests/"
            ]
        },
        {
            "name": "Django Server",
            "type": "debugpy", 
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "DJANGO_SETTINGS_MODULE": "config.settings"
            },
            "args": [
                "runserver",
                "0.0.0.0:8005"
            ]
        }
    ]
}
