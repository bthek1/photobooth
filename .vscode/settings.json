{
  // Use Pytest with proper Django test settings
  "python.testing.pytestArgs": ["."],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestPath": "./.venv/bin/pytest",
  
  // Set environment variables for testing
  "python.terminal.activateEnvironment": true,
  "python.defaultInterpreterPath": "./.venv/bin/python",
  "python.testing.pytestEnvVars": {
    "DJANGO_SETTINGS_MODULE": "config.settings",
    "TESTING": "1"
  },

  // Format Python with Ruff
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll.ruff": "explicit"
    }
  },

  // Format JS with Prettier
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Format JSON with built-in
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  // Optional: TypeScript support
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Python module resolution
  "python.analysis.extraPaths": [
    "./crms/clinico/cliniko-api-client",
    "./crms/clinico/autogen"
  ],
  "livePreview.defaultPreviewPath": "/htmlcov/index.html"
}
